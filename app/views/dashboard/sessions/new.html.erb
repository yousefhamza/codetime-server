<div class="min-h-screen flex items-center justify-center p-5">
  <div class="bg-white rounded-xl p-10 w-full max-w-md shadow-sm">
    <h1 class="text-2xl font-semibold mb-2">CodeTime Dashboard</h1>
    <p class="text-slate-500 text-sm mb-6">Enter your API token to view your coding analytics</p>

    <%= form_with url: dashboard_login_path, method: :post, class: "mb-5" do |f| %>
      <div class="mb-4">
        <label for="token" class="block text-sm font-medium mb-1.5">API Token</label>
        <%= text_field_tag :token, nil,
            placeholder: "Paste your token from VS Code extension",
            autofocus: true,
            class: "w-full px-3 py-2.5 text-sm border border-slate-200 rounded-lg outline-none focus:border-blue-500 transition-colors" %>
      </div>

      <div class="mt-5">
        <%= submit_tag "Log In", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2.5 px-5 rounded-lg cursor-pointer transition-colors" %>
      </div>
    <% end %>

    <p class="text-slate-500 text-xs text-center">
      Find your token in VS Code: CodeTime extension settings
    </p>
  </div>
</div>
